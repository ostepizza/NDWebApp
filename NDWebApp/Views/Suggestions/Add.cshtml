@model SuggestionModel
@{
    ViewBag.Title = "Send inn forslag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>
<a asp-action="Index" class="btn btn-secondary">Tilbake</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="SuggestionTitle">Tittel:</label>
        <input asp-for="SuggestionTitle" class="form-control" aria-required="true" />
    </div>
    <div class="form-group">
        <label asp-for="SuggestionDescription">Beskrivelse:</label>
        <input asp-for="SuggestionDescription" class="form-control" aria-required="true" />
    </div>
    <div class="form-group">
        <label asp-for="SuggestionDeadline">Deadline:</label>
        <input asp-for="SuggestionDeadline" class="form-control" aria-required="true" />
    </div>
    <div class="form-group">
        <label asp-for="SuggestedUserId">Hvem har foreslått:</label>
        <input asp-for="SuggestedUserId" class="form-control" aria-required="true" />
    </div>
    <div class="form-group">
        <label asp-for="ResponsibleUserId">Hvem er ansvarlig:</label>
        <input asp-for="ResponsibleUserId" class="form-control" aria-required="true" />
    </div>
    <div class="form-group">
        <label asp-for="TeamId">ID for team:</label>
        <input asp-for="TeamId" class="form-control" aria-required="true" />
    </div>
    <button type="submit" class="btn btn-primary">Send inn forslag</button>
</form>