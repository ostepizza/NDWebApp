@model RepairsModel

@{
    ViewBag.Title = "Oppdater reparasjon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>
<a asp-action="Index" class="btn btn-secondary"> <i class="fa-solid fa-circle-chevron-left"></i> Tilbake</a>
<div asp-validation-summary="All" class="text-danger"></div>

<br />
<div class="alert alert-danger" role="alert">
    <i class="fas fa-triangle-exclamation"></i> Sluttdato resettes på hver oppdatering. Er reparasjonen ferdig utført bør det dermed ikke oppdateres.
</div>

<form asp-action="Update" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input asp-for="RepairId" class="form-control" value="@Model.RepairId" hidden />
    </div>

    <div class="form-group">
        <label asp-for="RepairTitle">Tittel:</label>
        <input asp-for="RepairTitle" class="form-control" value="@Model.RepairTitle" />
    </div>

    <div class="form-group">
        <label asp-for="RepairDescription">Beskrivelse:</label>
        <input asp-for="RepairDescription" class="form-control" value="@Model.RepairDescription" />
    </div>

    <div class="form-group">
        <label asp-for="RepairDeadline">Deadline:</label>
        <input asp-for="RepairDeadline" class="form-control" value="@Model.RepairDeadline.ToString("yyyy-MM-dd HH:mm:ss")" />
    </div>

    <div class="form-group">
        <label asp-for="RepairEnddate">Sluttdato:</span></label>
        <input asp-for="RepairEnddate" class="form-control" value="@Model.RepairEnddate" />
    </div>

    <div class="form-group">
        <label asp-for="UserId">Sendt inn av:</label>
        <input type="text" class="form-control" value="@Model.UserFirstname @Model.UserLastname" disabled>
        <input asp-for="UserId" class="form-control" value="@Model.UserId" disabled />
    </div>

    <div class="form-group">
        <label asp-for="StatusId">Status:</label>
        <select asp-for="StatusId" class="form-control">
            <option value="2">Avbrutt</option>
            <option value="3">GjennomfÃ¸res</option>
            <option value="4">PÃ¥ pause</option>
            <option value="5">Ferdig</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary"> <i class="fa-solid fa-floppy-disk"></i> Lagre</button>
</form>