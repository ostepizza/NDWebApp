@model RepairsModel
@using NDWebApp.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject UserManager<NDWebAppUser> UserManager

@{
    ViewBag.Title = "Send inn reparasjon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>
<a asp-action="Index" class="btn btn-secondary"> <i class="fa-solid fa-circle-chevron-left"></i> Tilbake</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input asp-for="UserId" class="form-control" aria-required="true" value="@UserManager.GetUserAsync(User).Result.Id" hidden />
        <input asp-for="TeamId" class="form-control" aria-required="true" value="@UserManager.GetUserAsync(User).Result.teamId" hidden />
    </div>
    <div class="form-group">
        <label asp-for="RepairTitle">Tittel p√• forslag:</label>
        <input asp-for="RepairTitle" class="form-control" aria-required="true" />
    </div>
    <div class="form-group">
        <label asp-for="RepairDescription">Beskrivelse av forslag:</label>
        <input asp-for="RepairDescription" class="form-control" aria-required="true" />
    </div>
    <div class="form-group">
        <label asp-for="RepairDeadline">Deadline:</label>
        <input asp-for="RepairDeadline" class="form-control" aria-required="true" />
    </div>

    <button type="submit" class="btn btn-primary"> <i class="fas fa-wrench"></i> Send inn forslag</button>
</form>